{
  "name": "sidenoder",
  "version": "0.7.6",
  "description": "SideNoder - oculus quest tool for sideloading, device tweaks, application management, etc",
  "repository": "https://github.com/MikeRatcliffe/quest-sidenoder/",
  "main": "main.js",
  "dependencies": {
    "@devicefarmer/adbkit": "^3.2.5",
    "@electron/remote": "^2.0.10",
    "adbkit-apkreader": "^3.2.0",
    "command-exists": "^1.2.9",
    "compare-versions": "^6.0.0",
    "electron-find": "^1.0.7",
    "electron-twig": "^1.1.1",
    "fix-path": "3.0.0",
    "jquery": "^3.7.0",
    "node-fetch": "^2.6.12",
    "socks-proxy-agent": "^8.0.1",
    "web-auto-extractor": "^1.0.17"
  },
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.46.0",
    "eslint-plugin-html": "^7.1.0",
    "prettier": "^3.0.1"
  },
  "scripts": {
    "start": "electron ./ --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "dist-win": "electron-builder -w",
    "dist-mac": "electron-builder -m",
    "postdist": "npm run pack-win && npm run pack-mac",
    "postinstall": "electron-builder install-app-deps",
    "pack-win": "cd out/win-unpacked && cp ../windows-install.bat ./ && 7za a sidenoder-$npm_package_version-win.zip  ./* && mv sidenoder-$npm_package_version-win.zip ../",
    "pack-mac": "cd out/mac && tar -czf sidenoder-$npm_package_version-mac.tar.gz  ./* && mv sidenoder-$npm_package_version-mac.tar.gz ../",
    "lint": "eslint --fix \"**/*.{js,twig}\"",
    "format": "prettier --write \"**/*.{css,js,twig}\""
  },
  "build": {
    "appId": "com.sidenoder.app",
    "asar": true,
    "directories": {
      "output": "out"
    },
    "afterPack": "./removeLocales.js",
    "mac": {
      "target": [
        "dir"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "author": "Mike Ratcliffe <michael@ratcliffefamily.org> (https://github.com/MikeRatcliffe/quest-sidenoder/)",
  "bugs": "https://github.com/MikeRatcliffe/quest-sidenoder/issues",
  "homepage": "https://github.com/MikeRatcliffe/quest-sidenoder#readme",
  "license": "MIT"
}
